<odoo>
    <record id="view_simple_billing_invoice_form" model="ir.ui.view">
        <field name="name">simple.billing.invoice.form</field>
        <field name="model">simple.billing.invoice</field>
        <field name="arch" type="xml">
            <form string="Invoice">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer_id"/>
                        <field name="invoice_date"/>
                        <field name="status"/>
                        <field name="note"/>
                    </group>
                    <notebook>
                        <page string="Invoice Lines">
                            <field name="invoice_line_ids">
                                <list editable="bottom">
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="subtotal" readonly="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <field name="total_amount" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_simple_billing_invoice_list" model="ir.ui.view">
        <field name="name">simple.billing.invoice.list</field>
        <field name="model">simple.billing.invoice</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="invoice_date"/>
                <field name="total_amount"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="action_simple_billing_invoice" model="ir.actions.act_window">
        <field name="name">Invoices</field>
        <field name="res_model">simple.billing.invoice</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_simple_billing_line" model="ir.actions.act_window">
        <field name="name">Invoices Line</field>
        <field name="res_model">simple.billing.line</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_simple_billing_root" name="Simple Billing"/>
    <menuitem id="menu_simple_billing_invoice" name="Invoices" parent="menu_simple_billing_root" action="action_simple_billing_invoice"/>
    <menuitem id="menu_simple_billing_line" name="Invoices Line" parent="menu_simple_billing_root" action="action_simple_billing_line"/>
</odoo>